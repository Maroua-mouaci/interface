<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="transport.control.PurchaseFareController"
            prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f6f0ed;">
   <children>
      <Label layoutX="152.0" layoutY="67.0" text="PURCHASE FARE MEDIUM" textFill="#7ea8be">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <VBox layoutX="148.0" layoutY="111.0" opacity="0.38" prefHeight="182.0" prefWidth="304.0"
            style="-fx-background-color: #c2948a; -fx-background-radius: 10px;" />
      <Label layoutX="190.0" layoutY="175.0" text="Fare Type:" textFill="#28536b" />
      <RadioButton layoutX="299.0" layoutY="200.0" mnemonicParsing="false" text="Personal Card" textFill="#223843" />
      <RadioButton layoutX="299.0" layoutY="175.0" mnemonicParsing="false" text="Ticket (50 DA)" textFill="#223843" />
      <Label layoutX="315.0" layoutY="217.0" text=" (Price: )" />
      <Label layoutX="189.0" layoutY="249.0" text="Payment Method:" textFill="#28536b" />
      <ComboBox layoutX="303.0" layoutY="245.0" prefHeight="25.0" prefWidth="95.0"
                promptText="select" style="-fx-background-color: #348aa7;" />
      <Label layoutX="190.0" layoutY="134.0" text="Select User:" textFill="#28536b" />
      <ComboBox layoutX="303.0" layoutY="131.0" prefHeight="25.0" prefWidth="95.0"
                promptText="Users" style="-fx-background-color: #348aa7;" />

      <!-- Purchase and go back to Accueil -->
      <Button fx:id="btnSave" layoutX="214.0" layoutY="306.0" mnemonicParsing="false"
              onAction="#handlePurchaseAction"
              prefHeight="25.0" prefWidth="162.0"
              style="-fx-background-color: #7ea8be; -fx-border-color: #28536b; -fx-background-radius: 5px; -fx-border-radius: 5px;"
              text="Purchase" textFill="WHITE" />
   </children>
</AnchorPane>
