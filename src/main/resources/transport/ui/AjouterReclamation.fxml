<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f6f0ed;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="your.package.RegisterComplaintController">

   <children>
      <Label layoutX="182.0" layoutY="71.0" prefHeight="35.0" prefWidth="270.0" text="REGISTER COMPLAINT" textFill="#7ea8be">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <VBox layoutX="167.0" layoutY="119.0" opacity="0.38" prefHeight="162.0" prefWidth="291.0"
            style="-fx-background-color: #c2948a; -fx-background-radius: 10px;" />

      <ComboBox fx:id="comboType" layoutX="274.0" layoutY="133.0" prefHeight="25.0" prefWidth="162.0"
                promptText="select the type"
                style="-fx-background-color: #348aa7; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #28536b;">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="Junior" />
               <String fx:value="Senior" />
               <String fx:value="Solidarite" />
               <String fx:value="partenaire" />
            </FXCollections>
         </items>
      </ComboBox>

      <TextField fx:id="txtConcerne" alignment="CENTER" layoutX="275.0" layoutY="186.0"
                 prefHeight="28.0" prefWidth="162.0"
                 style="-fx-border-color: #28536b; -fx-background-radius: 5px; -fx-border-radius: 5px;" />

      <TextField fx:id="txtDescription" alignment="CENTER" layoutX="275.0" layoutY="239.0"
                 prefHeight="28.0" prefWidth="162.0"
                 style="-fx-border-color: #28536b; -fx-background-radius: 5px; -fx-border-radius: 5px;" />

      <Label layoutX="186.0" layoutY="137.0" text="Type:" textFill="#28536b" />
      <Label layoutX="187.0" layoutY="192.0" text="Concerne(e):" textFill="#28536b" />
      <Label layoutX="188.0" layoutY="244.0" text="Description:" textFill="#28536b" />

      <Button fx:id="btnSubmit" layoutX="228.0" layoutY="292.0" mnemonicParsing="false"
              prefHeight="25.0" prefWidth="162.0"
              style="-fx-background-color: #7ea8be; -fx-border-color: #28536b; -fx-background-radius: 5px; -fx-border-radius: 5px;"
              text="Submit" textFill="WHITE" onAction="#handleSubmit" />

      <ImageView fitHeight="101.0" fitWidth="90.0" layoutX="-4.0" layoutY="332.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/ESI-RUN_logo_transparent.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
